{% extends 'base.html.twig' %}

{% block title %}Lisztomania :: {% trans from 'artists' %}action.update{% endtrans %}{% endblock %}
{% block pageTitle %}{% trans from 'artists' %}action.update{% endtrans %}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb text-right">
        <li><a href="{{ path('rtAdminDashboard') }}">{% trans %}global.dashboard{% endtrans %}</a></li>
        <li><a href="{{ path('rtAdminArtistOverview') }}">{% trans %}global.artists{% endtrans %}</a></li>
        <li class="active">{% trans from 'artists' %}action.update{% endtrans %}</li>
    </ol>
{% endblock %}

{% block mainContent %}  
    
<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">

                    {{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}

                        {{ form_row(form.name) }}
                        {{ form_row(form.sortName) }}   
                        {{ form_row(form.country) }}
                        {{ form_row(form.descriptionNl) }}
                        {{ form_row(form.descriptionEn) }}
                        
                        <div class="form-group">
                            <label>{% trans from 'artists' %}field.currentImage{% endtrans %}</label><br>
                            {% if artist.image is not null %}
                                <img src="{{ vich_uploader_asset(artist, 'imageFile') }}" />
                            {% else %}
                                {% trans %}image.notFound{% endtrans %}s
                            {% endif %}   
                        </div>
                            
                        {{ form_row(form.imageFile) }}                        
                        {{ form_row(form.status) }}

                        {{ form_widget(form.submit) }}
                        <a href="{{ path('rtAdminArtistOverview') }}" class="mt-2 btn btn-sm btn-outline-primary">
                            {% trans %}action.cancel{% endtrans %}
                        </a>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
</div>
    
{% endblock %}
