{% extends 'knp_menu.html.twig' %}

{% block linkElement %}
    {% import _self as knp_menu %}
        <a href="{{ item.uri }}">
            <i class="menu-icon {{ item.getExtra('icon') }}"></i>
            {{ block('label') }}
        </a>
{% endblock %}

{% block spanElement %}{% import _self as knp_menu %}<h3 class="menu-title">{{ block('label') }}</h3>{% endblock %}
