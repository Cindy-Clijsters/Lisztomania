{% extends 'base.html.twig' %}

{% block title %}Lisztomania :: {% trans from 'labels'%}action.view{% endtrans %}{% endblock %}
{% block pageTitle %}{% trans from 'labels'%}action.view{% endtrans %}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb text-right">
        <li><a href="{{ path('rtAdminDashboard') }}">{% trans %}global.dashboard{% endtrans %}</a></li>
        <li><a href="{{ path('rtAdminLabelOverview') }}">{% trans %}global.labels{% endtrans %}</a></li>
        <li class="active">{% trans from 'labels'%}action.view{% endtrans %}</li>
    </ol>
{% endblock %}

{% block mainContent %}  

    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">                      
                        
                        <div class="row">
                            <div class="col col-md-3">
                                <label class=" form-control-label">{% trans from 'labels' %}field.name{% endtrans %}</label>:
                            </div>
                            <div class="col-12 col-md-9">
                                <p class="form-control-static">{{ label.name }}</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col col-md-3">
                                <label class=" form-control-label">{% trans from 'labels' %}field.status{% endtrans %}</label>:
                            </div>
                            <div class="col-12 col-md-9">
                                <p class="form-control-static">{{ label.status|formatLabelStatus }}</p>
                            </div>
                        </div>  
                            
                        <div class="row mt-2">
                            <div class="col-md-12">
                                <a href="{{ path('rtAdminLabelOverview') }}" class="btn btn-outline-primary">{% trans %}action.backToOverview{% endtrans %}</a>
                            </div>
                        </div>                            
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
                                
{% endblock %}
