{% extends 'base.html.twig' %}

{% block title %}Lisztomania :: {% trans %}global.labels{% endtrans %}{% endblock %}
{% block pageTitle %}{% trans %}global.labels{% endtrans %}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb text-right">
        <li><a href="{{ path('rtAdminDashboard') }}">{% trans %}global.dashboard{% endtrans %}</a></li>
        <li class="active">{% trans %}global.labels{% endtrans %}</li>
    </ol>
{% endblock %}

{% block mainContent %}  
    
<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            {%  if (label == 'notice') %}
                                <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
                                    {{ message }}
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}

                    <div class="row mt-2 mb-4">
                        <div class="col-sm-12">
                            <a href="{{ path('rtAdminLabelCreate') }}" class="btn btn-link mr-4">{% trans from 'labels'%}action.add{% endtrans %}</a>
                        </div>
                    </div>

                    {% if labels is not empty %}

                        <div class="row">
                            <div class="col-sm-12">

                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>{% trans from 'labels' %}field.name{% endtrans %}</th>
                                            <th>{% trans from 'labels' %}field.status{% endtrans %}</th>
                                            <th>{% trans %}action.options{% endtrans %}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for label in labels %}
                                            <tr>
                                                <td>{{ label.name }}</td>
                                                <td>{{ label.status|formatLabelStatus }}</td>
                                                <td>
                                                    <a href="{{ path('rtAdminLabelRead', {'slug' : label.slug}) }}" class="mr-2">
                                                        <i class="ti ti-search" title="{% trans from 'labels' %}action.view{% endtrans %}"></i>
                                                    </a>
                                                    <a href="{{ path('rtAdminLabelUpdate', {'slug' : label.slug}) }}" class="mr-2">
                                                        <i class="ti ti-pencil-alt" title="{% trans from 'labels' %}action.update{% endtrans %}"></i>
                                                    </a>
                                                    <a href="{{ path('rtAdminLabelDelete', {'slug' : label.slug}) }}">
                                                        <i class="ti ti-trash" title="{% trans from 'labels' %}action.delete{% endtrans %}"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-5">
                                <div class="dataTables_info">
                                    {% trans with {'%start%': startRecord, '%end%' : endRecord, '%total%' : labels.getTotalItemCount} from 'labels' %}list.showEntries{% endtrans %}
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="bootstrap-data-table-export_paginate">
                                    {{ knp_pagination_render(labels) }}
                                </div>
                            </div>
                        </div>

                    {% else %}

                        <div class="row">
                            <div class="col-sm-12">
                                <p class="mt-2">{% trans from 'labels' %}list.noFound{% endtrans %}</p>
                            </div>
                        </div>

                    {%  endif %}

                </div>
            </div>
        </div>
    </div>
</div>
            
{% endblock %}

