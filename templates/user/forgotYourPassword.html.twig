<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Lisztomania :: {% trans %}global.login{% endtrans %}</title>
        <meta name="description" content="Lisztomania">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        {% block stylesheets %}
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('admin') }}

            <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
        {% endblock %}
    </head>

    <body class="bg-dark">
        <div class="sufee-login d-flex align-content-center flex-wrap">
            <div class="container">
                <div class="login-content">
                    <div class="login-logo">
                        <span>Lisztomania</span>
                    </div>
                    <div class="login-form">
                        {{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}
                            
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            
                            <p>{% trans from "users" %}forgotPassword.fillInUsernameOrEmail{% endtrans %}</p>
                            
                            {{ form_row(form.usernameOrEmail) }}                           
                            {{ form_widget(form.send) }}
                            
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>


        {% block javascripts %}
            {{ encore_entry_script_tags('admin') }}
        {% endblock %}

    </body>

</html>
