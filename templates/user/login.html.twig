<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Lisztomania :: Aanmelden beheersmodule</title>
        <meta name="description" content="Lisztomania">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        {% block stylesheets %}
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('admin') }}

            <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
        {% endblock %}
    </head>

    <body class="bg-dark">
        <div class="sufee-login d-flex align-content-center flex-wrap">
            <div class="container">
                <div class="login-content">
                    <div class="login-logo">
                        <span>Lisztomania</span>
                    </div>
                    <div class="login-form">
                        <form method="post">
                            
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            
                            <div class="form-group">
                                <label for="inputEmail" class="sr-only">E-mail adres</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                    <input type="email" value="{{ lastEmail }}" name="email" id="inputEmail" class="form-control" placeholder="E-mail adres" required autofocus>
                                </div>
                            </div>
                            
                            <div class="form-group">                             
                                <label for="inputPassword" class="sr-only">Wachtwoord</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Wachtwoord" required>           
                                </div>
                            </div>
                            
                            <!--
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="_remember_me">&nbsp;Onthoud mijn gegevens
                                </label>
                                <label class="pull-right">
                                    <a href="#">Wachtwoord vergeten?</a>
                                </label>
                            </div>
                            -->
                            
                            <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Aanmelden</button>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>


        {% block javascripts %}
            {{ encore_entry_script_tags('admin') }}
        {% endblock %}

    </body>

</html>
