{% extends 'loggedOut.html.twig' %}

{% block title %}Lisztomania :: {% trans %}global.login{% endtrans %}{% endblock %}

{% block mainContent %}  

{{ form_start(form, {'method': 'POST'}) }}
                       
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-group">
        {{ form_label(form.username) }}
        {{ form_widget(form.username) }}
    </div>

    <div class="form-group">                             
        {{ form_label(form.plainPassword) }}
        {{ form_widget(form.plainPassword) }}
    </div>

    <!--
    <div class="checkbox">
        <label>
            <input type="checkbox" name="_remember_me">&nbsp;Onthoud mijn gegevens
        </label>
    </div>
    -->

    {{ form_widget(form.submit) }}

    <div class="from-group mt-4 center">
        <a href="{{ path('rtAdminForgotYourPassword') }}">{% trans from "users" %}action.forgotYourPassword{% endtrans %}</a>
    </div>

{{ form_end(form) }}

{% endblock %}
