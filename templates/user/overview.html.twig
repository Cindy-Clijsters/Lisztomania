{% extends 'base.html.twig' %}

{% block title %}Lisztomania :: {% trans %}Users{% endtrans %}{% endblock %}
{% block pageTitle %}{% trans %}Users{% endtrans %}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb text-right">
        <li><a href="{{ path('rtAdminDashboard') }}">{% trans %}Dashboard{% endtrans %}</a></li>
        <li class="active">{% trans %}Users{% endtrans %}</li>
    </ol>
{% endblock %}

{% block mainContent %}  
    
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">

                                {% if is_granted('ROLE_SUPERADMIN') %}
                                    <div class="row mt-2 mb-4">
                                        <div class="col-sm-12">
                                            <a href="{{ path('rtAdminUserCreate') }}" class="btn btn-link mr-4">{% trans from 'users'%}Add a user{% endtrans %}</a>
                                        </div>
                                    </div>
                                {% endif %}
                                    
                                {% if users is not empty %}
                                    
                                    <div class="row">
                                        <div class="col-sm-12">

                                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>{% trans from 'users' %}Last name{% endtrans %}</th>
                                                        <th>{% trans from 'users' %}First name{% endtrans %}</th>
                                                        <th>{% trans from 'users' %}E-mail address{% endtrans %}</th>
                                                        <th>{% trans from 'users' %}Role{% endtrans %}</th>
                                                        <th>{% trans %}Status{% endtrans %}</th>
                                                        <th>{% trans %}Options{% endtrans %}</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for user in users %}
                                                        <tr>
                                                            <td>{{ user.id }}</td>
                                                            <td>{{ user.lastName }}</td>
                                                            <td>{{ user.firstName }}</td>
                                                            <td>{{ user.email }}</td>
                                                            <td>{{ user.roles|userRole }}</td>
                                                            <td>{{ user.status|formatUserStatus }}</td>
                                                            <td>
                                                                <a href="{{ path('rtAdminUserRead', {'id' : user.id}) }}" class="mr-2"><i class="ti ti-search"></i></a>
                                                                {% if is_granted('ROLE_SUPERADMIN') %}
                                                                    <a href="{{ path('rtAdminUserUpdate', {'id' : user.id}) }}" class="mr-2"><i class="ti ti-pencil-alt"></i></a>
                                                                    <a href="{{ path('rtAdminUserDelete', {'id' : user.id}) }}"><i class="ti ti-trash"></i></a>
                                                                {% endif %}
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                        
                                    <div class="row">
                                        <div class="col-sm-12 col-md-5">
                                            <div class="dataTables_info">
                                                {% trans with {'%start%': startRecord, '%end%' : endRecord, '%total%' : users.getTotalItemCount} from 'users' %}Showing user entries{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-sm-12 col-md-7">
                                            <div class="dataTables_paginate paging_simple_numbers" id="bootstrap-data-table-export_paginate">
                                                {{ knp_pagination_render(users) }}
                                            </div>
                                        </div>
                                    </div>
                                        
                                {% else %}
                                    
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <p class="mt-2">{% trans from 'users' %}No users were found{% endtrans %}</p>
                                        </div>
                                    </div>
                                    
                                {%  endif %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
            
{% endblock %}

