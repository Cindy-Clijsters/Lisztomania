{% extends 'base.html.twig' %}

{% block title %}Lisztomania :: {% trans from 'users'%}Add a user{% endtrans %}{% endblock %}
{% block pageTitle %}{% trans from 'users'%}Add a user{% endtrans %}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb text-right">
        <li><a href="{{ path('rtAdminDashboard') }}">{% trans %}Dashboard{% endtrans %}</a></li>
        <li><a href="{{ path('rtAdminUserOverview') }}">{% trans %}Users{% endtrans %}</a></li>
        <li class="active">{% trans from 'users'%}Add a user{% endtrans %}</li>
    </ol>
{% endblock %}

{% block mainContent %}  
    
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        
                        {{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}
                        
                            {{ form_row(form.lastName) }}
                            {{ form_row(form.firstName) }}                           
                            {{ form_row(form.email) }}
                            {{ form_row(form.plainPassword) }}
                            {{ form_row(form.confirmPassword) }}
                            {{ form_row(form.status) }}
                            {{ form_row(form.submit) }}
                            
                        {{ form_end(form) }}
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
{% endblock %}
